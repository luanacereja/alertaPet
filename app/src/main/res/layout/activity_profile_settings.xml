<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="lu.gab.com.alertapet.activity.ProfileActivity">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <include
            android:id="@+id/app_bar_profile"
            layout="@layout/app_bar" />


    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:id="@+id/profile_settings_image"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="35dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_user_circle"
        android:layout_below="@+id/appBarLayout2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/profile_settings_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Luana"
        android:textSize="25dp"
        android:layout_below="@+id/profile_settings_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp" />

    <TextView
        android:id="@+id/profile_settings_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="lu.cereja@hotmail.com"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_below="@+id/profile_settings_name"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/profile_settings_buttom"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_settings_email"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="68dp"
        android:layout_toStartOf="@+id/button_change_name"
        android:text="Alterar Foto"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/button_change_name"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/profile_settings_buttom"
        android:layout_alignBottom="@+id/profile_settings_buttom"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="34dp"
        android:text="Alterar Nome"
        android:textColor="@color/colorPrimaryDark" />

    />


</RelativeLayout>
