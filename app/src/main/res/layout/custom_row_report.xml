<?xml version="1.0" encoding="utf-8"?>


    <android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:id="@+id/cardViewReport">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <!-- Report image -->
            <ImageView
                android:id="@+id/imageReport"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_margin="5dp"
                android:padding="3dp"
                android:scaleType="centerCrop" />

            <!-- Report User -->
            <TextView
                android:id="@+id/reportUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/reportMessage"
                android:layout_alignTop="@+id/imageReport"
                android:maxLines="1"
                android:text="Luana Ramos"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reportLocation"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageReport"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:maxLines="1"
                android:text="Rio de Janeiro, NilÃ³polis"
                android:textColor="@android:color/black"
                android:textSize="10dip"
                android:textStyle="bold" />

            <!-- Report message -->
            <TextView
                android:id="@+id/reportMessage"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="2dp"
                android:layout_toEndOf="@+id/imageReport"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="desc"
                android:textColor="@android:color/black"
                android:textSize="13dip" />

            <TextView
                android:id="@+id/reportDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/imageReport"
                android:layout_marginEnd="5dp"
                android:text="date"
                android:textColor="@android:color/black"
                android:textSize="12dip" />

            <TextView
                android:id="@+id/textViewPhoneRow"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_alignBottom="@+id/imageReport"
                android:layout_alignStart="@+id/reportMessage"
                android:text="TextView"
                android:visibility="invisible" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>